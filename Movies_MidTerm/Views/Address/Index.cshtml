@model Movies_MidTerm.Models.Address

@{
    ViewData["Title"] = "Indeex";
}

<h4>Address</h4>
<hr />
<div class="col-md-4">
    @using (Html.BeginForm("Index", "Address", FormMethod.Post))
    {
        <div id="form-group" style="padding-top:10px;">
            <label for="fullName" style="width:120px;">Full Name</label>
            @Html.TextBoxFor(m => m.FullName)
        </div>
        <div id="form-group" style="padding-top:10px;">
            <label for="AddressLine1" style="width:120px;">Address Line 1</label>
            @Html.TextBoxFor(m => m.AddressLine1)
        </div>
        <div id="form-group" style="padding-top:10px;">
            <label for="AddressLine2" style="width:120px;">Address Line 2</label>
            @Html.TextBoxFor(m => m.AddressLine2)
        </div>
        <div id="form-group" style="padding-top:10px;">
            <label for="City"  style="width:120px;">City</label>
            @Html.TextBoxFor(m => m.City)
            </div>
            <label for="State" style="width:120px;">State</label>
            @Html.TextBoxFor(m => m.State)
            <label for="ZipCode" style="width:120px;">Zip Code</label>
            @Html.TextBoxFor(m => m.ZipCode)
            <label for="PhoneNumber" style="width:120px;">Phone Number</label>
            @Html.TextBoxFor(m => m.PhoneNumber)

            <input type="submit" value="Submit" />
            }
        </div>



