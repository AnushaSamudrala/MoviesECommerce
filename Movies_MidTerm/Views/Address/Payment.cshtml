@model Movies_MidTerm.Models.Payment

@{
    ViewData["Title"] = "Payment";
}

<h2>Payment</h2>

<div class="row">
    <div class="col-md-4">
        <img src="~/images/credit-card-icons-png.png" style="width:500px;height:100px;" />

        @using (Html.BeginForm("Create", "Payment", FormMethod.Post))
        {
        <div class="row">
            <div id="form-group" style="padding-top:10px;">
                <label for="NameOntheCard" style="width:150px;">Name On the Card</label>
                @Html.TextBoxFor(m => m.NameOntheCard,new {@class="form-control", style = "width: 200px;display:inline-block;" })
            </div>
            <div id="form-group" style="padding-top:10px;">
                <label for="CardNumber" style="width:150px;">Card Number</label>
                @Html.TextBoxFor(m => m.CardNumber,new {@class="form-control", style = "width: 200px;display:inline-block;" })

            </div>
            <div style="width:600px;display:inline-block;">

                <div class="form-group" style="padding-top:10px;">

                    <label style="width:150px;">Expiration </label>
                    <label for="Month">Month</label>
                    @Html.TextBoxFor(m => m.Month,new {@class="form-control", style = "width: 40px;display:inline-block;" })
                    <label for="Year">Year</label>
                    @Html.TextBoxFor(m => m.Year,new {@class="form-control", style = "width: 70px;display:inline-block;" })
                </div>
            </div>

            <div class="form-group" style="padding-top:10px;">
                @*<input type="button" id="addCard" value="Add your card" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Payment",new { NameOntheCard =m =>m.NameOntheCard, CardNumber = m.CardNumber, Month=m.Month ,Year=m.Year})'">*@
                <input type="submit" value="Add your card" />

            </div>
            @*</form>*@
        </div>
        }
    </div>
</div>



